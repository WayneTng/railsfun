<table border=1 width=100% style= "text-align: center;" >
  <thead>
    <tr>
      <td>Title</td>
      <td>Price</td>
      <td>Category</td>
    </tr>
  </thead>
  <tbody>
<% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.category.title %></td>
      <td><%= link_to 'Read more', product_path(product) %><td>
    </tr>
  <% end %>
  </tbody>
</table>
